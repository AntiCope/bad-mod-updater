{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "properties": {
        "version": {
            "type": [
                "array",
                "string"
            ],
            "description": "Minecraft version or versions."
        },
        "path": {
            "type": "string",
            "description": "Path to .minecraft/mods"
        },
        "direct": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "$ref": "#/definitions/name"
                    },
                    "url": {
                        "type": "string",
                        "format": "uri"
                    }
                },
                "required": [
                    "name",
                    "url"
                ]
            }
        },
        "modrinth": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "$ref": "#/definitions/name"
                    },
                    "id": {
                        "type": "string"
                    }
                },
                "required": [
                    "name",
                    "id"
                ]
            }
        },
        "github_releases": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "$ref": "#/definitions/name"
                    },
                    "repo": {
                        "type": "string",
                        "pattern": "[a-zA-Z0-9-]{1,63}/[a-zA-Z0-9-]{1,63}"
                    }
                },
                "required": [
                    "name",
                    "repo"
                ]
            }
        },
        "curseforge": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "$ref": "#/definitions/name"
                    },
                    "id": {
                        "type": [
                            "integer",
                            "string"
                        ]
                    }
                },
                "required": [
                    "name",
                    "id"
                ]
            }
        }
    },
    "definitions": {
        "name": {
            "pattern": "[^\\/:?*\"<>|]*\\.jar",
            "type": "string",
            "description": "Filename you want your mod to be saved as"
        }
    },
    "required": [
        "version",
        "path",
        "direct",
        "modrinth",
        "github_releases",
        "curseforge"
    ]
}